[Unit]
Description=gunicorn django daemon
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/root/AmazonSambhav/backend
ExecStart=/root/AmazonSambhav/backend/venv/bin/gunicorn --access-logfile - --workers 10 --timeout 30 --bind unix:/run/gunicorn_social2amazon.sock backend.wsgi:application
Environment="PATH=/root/AmazonSambhav/backend/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PRODUCTION=True"
# stderr_logfile = /root/AmazonSambhav/backend/logs/error.log
# stdout_logfile = /root/AmazonSambhav/backend/logs/access.log

[Install]
WantedBy=multi-user.target